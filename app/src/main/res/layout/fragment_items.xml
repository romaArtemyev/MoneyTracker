<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern"
    tools:context="com.loftschool.moneytracker.ItemsFragment"
    android:layout_margin="@dimen/layout_margin">

    <android.support.v7.widget.RecyclerView
        android:paddingTop="@dimen/recycler_view_paddingTop"
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/f_addBtn"
        android:layout_marginBottom="@dimen/fab_add_btn_size"
        android:layout_marginRight="@dimen/fab_add_btn_size"
        app:elevation="@dimen/elevation"
        app:borderWidth="@dimen/fab_borderWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_black_15dp"
        app:backgroundTint="@color/fab_color"
        app:tint="@color/white"/>

</FrameLayout>
